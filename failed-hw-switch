/*
Filename:	P6 - switch.cpp
By:         Max T.

Obejctive:	Demonstrate use of a switch structure 
            to output the Roman numeral equivalent of an 
            integer (range 0-19).
*/
#include <iostream> // for cin, cout, endl
using namespace std;
int main(void)
{
    int numberXroman; // dec var
    cin >> numberXroman; //prompts for number, initializes var
    
    switch (numberXroman){ //switch code for all cases 1-19
            
    case 1:
        cout << "I";
        break;
    case 2:
        cout << "II";
        break;
    case 3:
        cout << "III";
        break;
    case 4:
        cout << "IV";
        break;
    case 5:
        cout << "V";
        break;
    case 6:
        cout << "VI";
        break;
    case 7:
        cout << "VII";
        break;
    case 8:
        cout << "VIII";
        break;
    case 9:
        cout << "IX";
        break;
    case 10:
        cout << "X";
        break;
    case 11:
        cout << "XI";
        break;
    case 12:
        cout << "XII";
        break;
    case 13:
        cout << "XIII";
        break;
    case 14:
        cout << "XIV";
        break;
    case 15:
        cout << "XV";
        break;
    case 16:
        cout << "XVI";
        break;
    case 17:
        cout << "XVII";
        break;
    case 18:
        cout << "XVIII";
        break;
    case 19:
        cout << "XIX";
        break;

    default: //default code for any number not 1-19
        cout << "Error!\nThe number you entered was not in the range of 0-19. Please try again with a number in that range.";
}
}
